h1 = @category.name

= link_to 'Добавить столбец', new_admin_category_column_path(@category), class: 'btn btn-primary'
br
  .mt-2
    = link_to 'Добавить Товар', new_category_item_path(@category), class: 'btn btn-primary'
.mt-2
  h1 Столбцы
  - if @columns.blank?
    b Нет столбцов
  - else
    table.table.table-striped
      head
        th ID
        th Имя
        th Активный
        th
        th
      body
        - @columns.each do |column|
          tr
            td = column.id
            td = column.name
            td
              - if column.deleted_at.nil?
                span.btn.btn-success Да
              - else
                span.btn.btn-secondary Нет
            td
              = link_to 'Удалить', admin_category_column_path(column.category_id, column), class: 'btn btn-danger', method: :delete
            td
              = link_to 'Редактировать', edit_admin_category_column_path(column.category_id, column), class: 'btn btn-primary'
